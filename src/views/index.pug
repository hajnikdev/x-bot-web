			img(src=rel+"assets/linkedin.png", alt="linkedin")

		.contact-form
			.contact-form__content
				.contact-form__form
					.contact-form__form__form
						h1= local.contact_form.header
						p= local.contact_form.info
						form
							#email_validation_wrap
								input#contact_email(type="text",placeholder="E-mail")
								div.error Please enter valid e-mail address
							textarea#contact_message(type="text",placeholder=local.contact_form.phone)
							input#contact_submit(type="submit",value=local.contact_form.submit,data-sending=local.contact_form.submit_progress)
					.contact-form__form__thanks
						h1= local.contact_form.thanks
						p= local.contact_form.subthanks
