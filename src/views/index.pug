									-var l = 0
									while l < languages.length - 1
										a.dropdown-item(href=rel + languages[++l])= languages[l] === 'CS' ? 'CZ' : languages[l]
				.main-header__introduction
					img(src=rel+"assets/xbot-logo.svg", alt="")
					h1 !{local.header.intro}
					h2 !{local.header.subintro}
				//- a.btn.btn-arrow(href="http://www.xolution.sk/contact-us")= local.header.calc_roi
				a.btn.btn-arrow(href="#contact")= local.header.try_xbot

		section.bot-facts
			.container
				.bot-facts__brief.row
					.bot-facts__brief__claim.col-md-7
						h2= local.claims.left.title
						ul.bot-facts__brief__claim__points
							each point in local.claims.left.points
								li= point
					.bot-facts__brief__quote.col-md-5
						.bot-facts__brief__quote__quotation
						.carousel(data-siemainterval=10000)
							.carousel__container
								each item in local.claims.right
									.carousel__item
										p= item.text
										strong= item.author
							ul.carousel__bullets

		section.xbot-portfolio
			h1= local.portfolio.title
			.xbot-portfolio__container
				.xbot-portfolio__items.row
					- for(var i = 0; i < 4; i++)
						- var item = local.portfolio.items[i]
						a(href=(item.link === '#' ? '#' : (htmlWebpackPlugin.options.options.isDefault ? local.meta.code.toUpperCase() + '/' : '') + 'clients/' + item.link + '.html')).xbot-portfolio__item.col-md-6
							.xbot-portfolio__item__bg(style='background-image: url(' + rel + 'assets/' + item.image + ')')
							.xbot-portfolio__item__content
								h2= item.title
								- if('client' in item)
									.xbot-portfolio__item__client= item.client

		section#xbot.xbot-features
			.xbot-features__overlay
				.xbot-features__title.container
					.xbot-features__title__effect--left
					h2 !{local.xbot.title}
					.xbot-features__title__effect--right
			.container
				.row.text-center.d-none.d-sm-none.d-lg-flex
					.col-md-6
						img(src=rel+"assets/intelligence.png", alt="").xbot-features__header-img.xbot-features__header-img--left
					.col-md-6
						img(src=rel+"assets/company.png", alt="").xbot-features__header-img.xbot-features__header-img--right
				.xbot-features__categories.row
					each half in ['customer', 'company']
						- half = local.xbot[half];
						.xbot-features__categories__category.col-md
							h3= half.title
							- //p.xbot-features__categories__category__description= half.description
							each section in half.sections
								div.xbot-features__single.align-items-center(onclick="javascript:void(0)")
									.xbot-features__single__img-holder.align-items-center
										img(src=rel+'assets/svg/' + section.icon + '.svg', alt='')
									.xbot-features__single__description
										h4= section.title
										div !{section.description}
				//- hr
				//-.text-center
					//-a.btn.btn-purple.btn-purple--ghost(href=local.contactButton.link)= local.contactButton.label

		section.xbot_abilities.padded-section
			h2= local.abilities.title
			#botAbilities
				canvas
				.xbot_abilities__abilities
					each ability in local.abilities.list
						div.xbot_abilities__ability
							span= ability
			- //div(style="text-align: center")
				- //img(src="/assets/abilities.jpg", alt="")
			- //each ability in local.abilities.list
				- //div= ability

		section.implementation.padded-section
			h2 !{local.implementation.title}
			- //img(src="/assets/oblasti.png", alt="")
			.implementation__bubbles
				canvas
				.implementation__bubble--descriptions
					each implementation in local.implementation.list
						ul.implementation__bubble--description
							.implementation__bubble--description__caret
							each point in implementation.points
								li= point
				.implementation__bubbles__bubbles
					- var bubbleIdx = 0;
					each implementation in local.implementation.list
						- var titleSplit = implementation.title.split(' ')
						- var title = '';
						- for(var i = 0; i < titleSplit.length; i++) {
							- var br = false;
							- if(titleSplit[i].length > 1)
								- br = true;
							- title += titleSplit[i] + (i < titleSplit.length - 1 ? br ? '<br>' : ' ' : '');
						- }
						div.implementation__bubble--wrapper(data-idx=bubbleIdx,data-xpos=implementation.x,data-ypos=implementation.y)
							div.implementation__bubble
								span !{title}
						- bubbleIdx++;
		
		section.successful_bots
			h2= local.carousel.title
			.container
				.carousel--multiple-holder
					.carousel.carousel--multiple(data-siemainterval=6000)
						.carousel__container
							each item in local.carousel.items
								.carousel__item
									.claim__author= item.brand
									p !{item.description}
						ul.carousel__bullets

		section.implementation-progress.padded-section
			- section = local.implementation_progress;
			h2= section.title
			.implementation-progress__wrapper
				.implementation-progress__wrapper__scrollable
					.implementation-progress__chart.row.no-gutters
						- for(var i = 0; i < 6; i++) {
							.implementation-progress__chart__stage.col(data-progress=section.phases[i].progress,onclick="javascript:void(0)")
								.implementation-progress__chart__stage__description= section.phases[i].description
								if(i < section.phases.length - 1)
									.implementation-progress__chart__stage__circle
								.implementation-progress__chart__stage__container
									h5= section.stage+' '+(i+1)
									if(i < section.phases.length - 1)
										.implementation-progress__chart__stage__progress= section.phases[i].progress*100+'%'
						- }
					.implementation-progress__map.row.no-gutters
						.implementation-progress__map__stage.implementation-progress__map__stage--dashed.row.col-6.align-items-center.d-flex
							.implementation-progress__map__stage.implementation-progress__map__stage--planning.col-4= section.planning
						.implementation-progress__map__stage.implementation-progress__map__stage--stage-2.row.col-6
							.implementation-progress__map__stage.implementation-progress__map__stage--green.col-8= section.implementation
							.implementation-progress__map__stage.implementation-progress__map__stage--yellow.col-4
								.implementation-progress__map__stage--yellow__inner= section.support
